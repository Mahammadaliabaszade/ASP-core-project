@model IEnumerable<Slider>;
@{
    ViewData["Title"] = "Index";
    int count = 1;
}



<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body" style="width:800px">
                <h4 class="card-title">Slider table</h4>
                <a class="btn btn-success" asp-action="Create">Create Slider</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slider slide in Model)
                            {

                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="img/@slide.Image" height="200" width="200">
                                    </td>
                                    <td>

                                        <a class="btn btn-success" asp-action="Detail" asp-route-id="@slide.Id"><i class="mdi mdi-account-card-details"> </i></a>
                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@slide.Id"><i class="mdi mdi-auto-fix"> </i></a>

                                        @if (ViewBag.SliderCount != 1)
                                        {
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@slide.Id"> <i class="mdi mdi-close-box"> </i></a>
                                        }

                                    </td>

                                </tr>
                                count++;
                                @if (count > 5)
                                {
                                    break;
                                }
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

