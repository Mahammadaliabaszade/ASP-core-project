@model List<EduHome.Models.Teacher>;
@{
    ViewData["Title"] = "Index";
}

<div class="banner-area-wrapper" style="margin-bottom:45px;">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row telement">
        @foreach (EduHome.Models.Teacher teacher in Model)
        {
            <div class="col-md-3 col-sm-4 col-xs-12">
                <div class="single-teacher" style="margin-bottom:30px;">
                    <div class="single-teacher-img">
                        <a asp-action="Details" asp-controller="Teacher" asp-route-id="@teacher.Id"><img src="img/teacher/@teacher.Image" alt="teacher"></a>
                    </div>
                    <div class="single-teacher-content text-center">
                        <h2><a asp-action="Details" asp-controller="Teacher" asp-route-id="@teacher.Id">@teacher.Name</a></h2>
                        <h4>@teacher.Profession</h4>
                        <ul>
                            <li><a href="https://www.facebook.com/devitems/?ref=bookmarks"><i class="zmdi zmdi-facebook"></i></a></li>
                            <li><a href="https://www.pinterest.com/devitemsllc/"><i class="zmdi zmdi-pinterest"></i></a></li>
                            <li><a href="#"><i class="zmdi zmdi-vimeo"></i></a></li>
                            <li><a href="https://twitter.com/devitemsllc"><i class="zmdi zmdi-twitter"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }




    </div>
    <div class="row fa-align-justify">
        <input type="hidden" value="@ViewBag.tcount" id="tcount" />
        <button class="btn btn-success btn-lg" id="loadMore3" style="margin-left:540px">Load more..</button>
    </div>
</div>

